{
  "name": "md2html2pptx",
  "version": "1.0.0",
  "description": "Markdown to HTML to PowerPoint conversion skill",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "to_html": "node assets/to_html.js",
    "preview": "node assets/preview.js",
    "to_pptx": "node assets/to_pptx.js",
    "clean_dev": "rm -rf assets/2_htmls/* && for f in assets/1_mds/*.md; do npm run to_html -- \"$f\"; done && npm run preview -- --no-open"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "mermaid": "^10",
    "playwright": "^1.40.0",
    "pptxgenjs": "^3.12.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "vitest": "^4.0.17"
  },
  "keywords": [
    "powerpoint",
    "pptx",
    "html",
    "markdown",
    "presentation"
  ],
  "license": "MIT"
}
